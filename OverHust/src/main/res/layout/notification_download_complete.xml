<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/notification_icon_complete"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="3dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_launcher" />

    <ImageView
        android:layout_marginLeft="16dp"
        android:layout_width="75dp"
        android:layout_height="15dp"
        android:id="@+id/notification_text_complete"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/notification_icon_complete"
        android:background="@drawable/ic_notification_title" />


    <TextView
        android:text="离线包下载已完成"
        android:id="@+id/notification_download_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_text_complete"
        android:layout_toRightOf="@id/notification_icon_complete"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="3dp" />


</RelativeLayout>